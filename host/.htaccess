RewriteEngine On

# 1. If the request is for the /api folder, let it pass through
RewriteRule ^api/ - [L]

# 2. If the request is for an actual file or directory that exists, serve it
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3. Otherwise, send everything else to index.html
RewriteRule ^ index.html [L]